          <%= f.text_area :content, class: 'form-control' %>
        </div>
        <div class="form-group">
          <div class="">
            <%= f.label :clip %>
          </div>
          <div class="">
            <%= f.file_field :clip%>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :thumbnail %>

          <div class="form-group">
            <%= f.file_field :thumbnail%>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit 'submit', class:"btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
