<body>

<div class="main">
<!-- Sign in  Form -->
<section class="sign-in">
  <div class="container">
    <div class="signin-content">
      <div class="signin-image">
        <figure><%= image_tag ("signin-image.jpg") %> </figure>
        <% link_to "Create an account" ,new_user_path,class:"signup-image-link" %>
      </div>

      <div class="signin-form">
        <h2 class="form-title">Sign in</h2>
        <%= form_for :session,class:"register-form", url: login_path do |f| %>
          <div class="form-group">

            <%= f.text_field :username , placeholder:"Your user name"%>
          </div>
          <div class="form-group">

            <%= f.password_field :password , placeholder:"Your password"%>
          </div>


          <div class="form-group form-button">
            <%= f.submit "login",class:"form-submit" %>
          </div>
        <%end %>
        <div style="margin-top: 30px">
        <%= link_to "Register for a new account",{action: :new, controller: :users}%>
        </div>
      </div>
    </div>
  </div>
</section>

</div>