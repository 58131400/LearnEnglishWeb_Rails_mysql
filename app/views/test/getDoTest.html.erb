
<%=form_tag('/test/postDoTest') do %>
<% @exercises.each_with_index { |e, index| %>
  <div class="card" style="margin-bottom: 30px">
   <div class="card-header"><h6>Question <%= (index+1) %>: <%= e[0]["Question"] %></h6></div>
   <div class="card-body">
    <% e[1].each do |s| %>
      <div>
        <%= radio_button_tag("exercise[" + s.exercise_id.to_s + "]", s.SelectionId) %>
        <%= label_tag("exercise[" + s.exercise_id.to_s + "]", s.Content) %>
      </div>
    <% end %>
   </div>
  </div>
<% } %>
  <div class="text-center"><%= submit_tag "submit", class:"btn btn-primary" %></div>

<%end %>
