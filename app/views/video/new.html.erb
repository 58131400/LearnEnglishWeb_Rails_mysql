<div class="card">
  <div class="card-header text-center">UPLOAD VIDEO</div>
  <div class="card-body">
    <div class="mx-auto text-center" style="width: 600px">
      <%= form_for @video,url: {action: :create,controller: :video}, html: {multipart: true} do |f| %>
        <% if @video.errors.any? %>
          <div id="error_explanation" class="border border-danger">
            <h2><%= pluralize(@video.errors.count, "error") %> prohibited this video from being saved:</h2>

            <ul>
              <% @video.errors.full_messages.each do |message| %>
